<div class="w-full">
  <p><%= Date::MONTHNAMES[Date.today.month] %>, <%= Date.today.year %></p>
  <%= Date.new(2023, 12, 13).strftime('%A')%>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Clocks</h1>
  </div>

  <div class="grid grid-cols-7 gap-2">
  <% Calendar.new(2000, 1).days do |day| %>
    <div id="<%= day.to_identifier %>" class="rounded bg-blue-600">
      <p><%= day.of_the_week %> <%= day.of_the_month %></p>
      <p>8h00m</p>
    </div>
  <% end %>
  </div>

  <div id="clocks" class="min-w-full">
    <%= render @clocks %>
    <%= link_to 'New clock', new_clock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
</div>
